pipeline {

  environment {
    COMMAND = "/opt/virtualenv/ansible/bin/ansible-playbook"
    INVENTORY = "inventories/dev"
    PLAYBOOK = "lb-deploy.yml"
  }

  agent {
    label 'dockerhost-label'
  }

  stages {

    stage('Deploy') {
      steps{
        sh "$COMMAND $PLAYBOOK -i $INVENTORY"
      }
    }

  }
}
